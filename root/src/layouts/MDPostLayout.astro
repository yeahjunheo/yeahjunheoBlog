---
import BaseLayout from "./BaseLayout.astro";

const formatter = Astro.props;
---

<BaseLayout pageTitle={formatter.title}>
    <section class="flex flex-col gap-6 py-4">
        <header class="flex flex-col w-full">
            <h1>{formatter.title}</h1>
            <p>{formatter.pubDate.toString().slice(0, 15)}</p>
            <p><em>{formatter.description}</em></p>
        </header>
        <article class="flex flex-col w-full gap-4">
            <slot />
        </article>
    </section>
</BaseLayout>
